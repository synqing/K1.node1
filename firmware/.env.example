# K1.node1 Environment Configuration Template
# Copy this file to .env and fill in your local values
# NEVER commit .env - it should only exist on development machines

# WiFi Configuration (required for network functionality)
# SSID of your WiFi network
WIFI_SSID=your_network_ssid_here

# WiFi password (WPA2-PSK)
WIFI_PASSWORD=your_network_password_here

# Optional: Device hostname for mDNS
DEVICE_HOSTNAME=k1-reinvented

# Optional: Static IP configuration (leave empty for DHCP)
WIFI_IP_ADDRESS=
WIFI_SUBNET_MASK=
WIFI_GATEWAY=
WIFI_DNS1=
WIFI_DNS2=

# Development/Debug Settings
DEBUG_LEVEL=1
ENABLE_PROFILER=0
ENABLE_UART_SYNC=0

# Audio Processing Settings
EMOTISCOPE_ACTIVE=1
AUDIO_GAIN=1.0
AUDIO_FLOOR=0.01
AUDIO_DECAY=0.98

# LED Configuration
NUM_LEDS=160
LED_BRIGHTNESS=1.0

# Feature Flags
ENABLE_OTA_UPDATES=1
ENABLE_DIAGNOSTICS=1
